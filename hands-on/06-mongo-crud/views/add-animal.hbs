{{#extends 'base'}}

{{#block 'content'}}
<h1>Add new animal</h1>
<form method="post">
    <div>
        <label>Name:</label>
        <input type="text" class="form-control" id="animalName" name="animalName">
    </div>
    <div>
        <label>Age:</label>
        <input type="text" class="form-control" id="animalAge" name="animalAge">
    </div>
    <div>
        <label>Type of animal:</label>
        <select class="form-select" id="animalType" name="animalType">
            <option value="dog" selected>Dog</option>
            <option value="cat">Cat</option>
            <option value="hamster">Hamster</option>
            <option value="rabbit">Rabbit</option>
            <option value="others">Others</option>
        </select>
    </div>
    <div>
        <label>Gender of animal:</label>
        <div class="form-check-inline">
            <input class="form-check-input" type="radio" name="animalGender" value="male" id="male-gender" checked>
            <label class="form-check-label" for="male-gender">
                Male
            </label>
        </div>
        <div class="form-check-inline">
            <input class="form-check-input" type="radio" name="animalGender" value="female" id="female-gender">
            <label class="form-check-label" for="female-gender">
                Female
            </label>
        </div>
    </div>
    <div>
        <label>Notes:</label>
        <textarea class="form-control" id="animalNotes" name="animalNotes" rows="3"></textarea>
    </div>
    <input type="submit" value="Submit" class="btn btn-primary mt-3"/>
</form>
{{/block}}

{{/extends}}