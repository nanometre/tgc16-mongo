{{#extends 'base'}}

{{#block "content"}}
<h1>Notes for {{foodRecord.name}}</h1>
{{#each foodRecord.notes}}
<div class="card mt-3">
    <div class="card-body">
    {{this.content}}
        <div class="mt-3">
            <a href="/food/{{../foodRecord._id}}/notes/{{this._id}}" class="btn btn-primary btn-sm">Edit</a>
            <a href="/food/{{../foodRecord._id}}/notes/{{this._id}}/delete" class="btn btn-danger btn-sm">Delete</a>
       </div>
      
    </div>
</div>
{{/each}}
{{/block}}

{{/extends}}